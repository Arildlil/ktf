#
# Implementation of the kernel part of Kernel Test Framework (KTF),
# a framework for running unit test like tests within the kernel.
#

ccflags-y += -Wno-declaration-after-statement

KVER = @KVER@

obj-m := ktf.o

-include ktf_gen.mk

ktf-y := kbase.o nl.o ktf_map.o kcheck.o ktf_debugfs.o ktf_cov.o ktf_override.o

KDIR   := @KDIR@
PWD    := $(shell pwd)

module:
	$(MAKE) -C $(KDIR) SUBDIRS=$(PWD) modules
clean:
	$(MAKE) -C $(KDIR) M=$(PWD) clean

check: all
