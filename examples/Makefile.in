ccflags-y += -Wno-declaration-after-statement

KVER = @KVER@
KTF_DIR = @KTF_DIR@
KTF_BDIR = @KTF_BDIR@

-include ktf_gen.mk

ccflags-y += -I$(KTF_DIR)

obj-m := hello.o

KDIR   := /lib/modules/$(KVER)
PWD    := $(shell pwd)

EXTRASYMS := KBUILD_EXTRA_SYMBOLS="$(KTF_BDIR)/Module.symvers"

module:
	$(MAKE) -C $(KDIR)/build SUBDIRS=$(PWD) $(EXTRASYMS) modules
clean:
	$(MAKE) -C $(KDIR)/build M=$(PWD) clean

check: all
install: all
